<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="BehaviorTree">
  <BehaviorTree ID="BehaviorTree">
    <Sequence>
      <ROS2DecoratorNode robot_hp="{robot_hp}"
                         friend_location="{friend_location}"
                         robot_status="{robot_status}"
                         rfid="{rfid}"/>
      <Delay delay_msec="1000">
        <WaitUntilSubscribe robot_hp="{robot_hp}"
                            friend_location="{friend_location}"
                            robot_status="{robot_status}"
                            rfid="{rfid}"/>
      </Delay>
      <SendGoal linear_x="0"
                linear_y="1"
                linear_z="2"
                angular_x="3"
                angular_y="4"
                angular_z="5"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="ROS2DecoratorNode"
            editable="true">
      <output_port name="robot_hp"
                   default="{robot_hp}"/>
      <output_port name="friend_location"
                   default="{friend_location}"/>
      <output_port name="robot_status"
                   default="{robot_status}"/>
      <output_port name="rfid"
                   default="{rfid}"/>
    </Action>
    <Action ID="SendGoal"
            editable="true">
      <input_port name="linear_x"
                  default="0"/>
      <input_port name="linear_y"
                  default="0"/>
      <input_port name="linear_z"
                  default="0"/>
      <input_port name="angular_x"
                  default="0"/>
      <input_port name="angular_y"
                  default="0"/>
      <input_port name="angular_z"
                  default="0"/>
    </Action>
    <Action ID="WaitUntilSubscribe"
            editable="true">
      <input_port name="robot_hp"
                  default="{robot_hp}"/>
      <input_port name="friend_location"
                  default="{friend_location}"/>
      <input_port name="robot_status"
                  default="{robot_status}"/>
      <input_port name="rfid"
                  default="{rfid}"/>
      <input_port name="goal_pose"/>
    </Action>
  </TreeNodesModel>

</root>
